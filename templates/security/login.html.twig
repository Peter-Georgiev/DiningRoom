{% extends 'base.html.twig' %}

{% block title %}ВХОД!{% endblock %}

{% block main %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('app_login') }}" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <fieldset>
                    <legend>Вход</legend>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="inputUsername">Потребителско име</label>
                        <div class="col-sm-4 ">
                            <input type="text" value="{{ last_username }}" class="form-control"
                                   id="inputUsername" placeholder="Потребителско име" name="username" required autofocus>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="inputPassword">Парола</label>
                        <div class="col-sm-4">
                            <input type="password" class="form-control" id="inputPassword"
                                   placeholder="Парола" name="password" required>
                        </div>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('home') }}">Изход</a>
                            <button type="submit" class="btn btn-primary">Вход</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}
