{% extends 'base.html.twig' %}

{% block title %}Create student!{% endblock %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            {{ form_start(form) }}
            <fieldset>
                <legend>педактиране на плащане</legend>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">Име на ученик</th>
                        <th scope="col">Клас</th>
                        <th scope="col">Цена за плащане</th>
                        <th scope="col">Такса в дни</th>
                        <th scope="col">Такса за месец</th>
                        <th scope="col">Статус</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ product.student.fullName }}</td>
                        <td>{{ product.student.class.name }}</td>
                        <td>{{ product.price }} лв.</td>
                        <td>{{ product.feeInDays }}</td>
                        <td>{{ product.forMonth|date('m.Y') }}</td>
                        {% if product.isPaid %}
                            <td>Платено</td>
                        {% else %}
                            <td>Неплтено</td>
                        {% endif %}
                    </tbody>
                </table>

                <div class="form-group">
                    <div class="col-sm-4 ">
                        {{ form_row(form.namePayer, {
                            label: 'Име на вносителя.'
                        }) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4">
                        {{ form_row(form.price, {
                            label: 'Дължима такса в лева.'
                        }) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4">
                        {{ form_row(form.payment, {
                            label: 'Въведи сума в лева.'
                        }) }}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4">
                        {{ form_row(form.seller, {
                            label: 'Да се приеме от'
                        }) }}
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" href="{{ path('payment') }}">Изход</a>
                        <button type="submit" class="btn btn-primary">Плащане</button>
                    </div>
                </div>

            </fieldset>
            {{ form_end(form) }}
        </div>
    </div>

    <div class="container body-content span=8 offset=2">
        <table id="dataTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">

        </table>
    </div>

{% endblock %}

{% block jsCustomPage %}
    <script type="module" src="{{ asset('/js/custom-page/page-payment-ajax.js') }}"></script>
{% endblock %}